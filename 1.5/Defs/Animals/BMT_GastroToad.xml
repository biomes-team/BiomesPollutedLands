<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BMT_PolluedLands_AnimalThingBase">
		<defName>BMT_Polluwog</defName>
		<label>Polluwog</label>
		<description>The larval form of the gastro toad. It lives in the disgusting waters of polluted biomes, feeding off any detritus and plants it can reach. It often lives in large groups.</description>
		<statBases>
			<MoveSpeed>3</MoveSpeed>
			<MarketValue>50</MarketValue>
			<ComfyTemperatureMin>-10</ComfyTemperatureMin>
			<ComfyTemperatureMax>50</ComfyTemperatureMax>
			<FilthRate>2</FilthRate>
			<ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">1</ToxicEnvironmentResistance>
		</statBases>
		<race>
			<herdAnimal>true</herdAnimal>
			<body>Snake</body>
			<baseBodySize>0.1</baseBodySize>
			<baseHealthScale>0.1</baseHealthScale>
			<baseHungerRate>0.25</baseHungerRate>
			<foodType>VegetarianRoughAnimal</foodType>
			<leatherDef>BMT_Leather_Amphibian</leatherDef>
			<useMeatFrom>BMT_Maxolotl</useMeatFrom>
			<wildness>25</wildness>
			<trainability>None</trainability>
			<mateMtbHours>8</mateMtbHours>
			<lifeExpectancy>0.1</lifeExpectancy>
			<lifeStageAges>
				<li>
					<def>AnimalBabyTiny</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.12</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.2</minAge>
					<soundWounded>Pawn_Iguana_Wounded</soundWounded>
					<soundDeath>Pawn_Iguana_Death</soundDeath>
					<soundCall>Pawn_Iguana_Call</soundCall>
					<soundAngry>Pawn_Iguana_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
		</race>
		<!--uiIconScale>1.5</uiIconScale-->
		<comps>
			<li Class="BiomesCore.CompProperties_EvolveAtFixedAge">
				<ageInDays>12</ageInDays>
				<evolveIntoPawnKindDef>BMT_GastroToad</evolveIntoPawnKindDef>
			</li>
			<li Class="BiomesCore.CompProperties_BottomFeeder">
				<feedingTerrainTag>Water</feedingTerrainTag>
				<consumingFoodReportString>Eating.</consumingFoodReportString>
				<effecterDef>EatFish</effecterDef>
			</li>
		</comps>
		<tools>
			<li>
				<label>teeth</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>1</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
				<chanceFactor>0.8</chanceFactor>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>1</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>1</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.1</chanceFactor>
			</li>
		</tools>
		<modExtensions>
			<li MayRequire="pathfinding.framework" Class="PathfindingFramework.MovementExtension">
				<movementDef>PF_Movement_Aquatic</movementDef>
			</li>
			<li Class="BiomesCore.DefModExtensions.Biomes_AnimalControl">
				<isBottomFeeder>true</isBottomFeeder>
			</li>
		</modExtensions>
	</ThingDef>
	<PawnKindDef ParentName="AnimalKindBase">
		<defName>BMT_Polluwog</defName>
		<label>polluwog</label>
		<race>BMT_Polluwog</race>
