<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BMT_PollutedLands_PlantBase">
    <defName>BMT_Plant_TwistedDandelion</defName>
    <label>twisted dandelion</label>
    <description>A small flower that has adapted to surviving in toxic soil. It retains much of the beauty of its normal counterpart.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>3</Beauty>
      <BeautyOutdoors>3</BeautyOutdoors>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <graphicData>
      <texPath>BMT_PollutedLands/Things/Plant/TwistedDandelion</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible />
	<selectable>false</selectable>
    <plant>
      <growDays>2.5</growDays>
      <sowTags>
        <li>Ground</li>
		<li>Decorative</li>
      </sowTags>
      <maxMeshCount>25</maxMeshCount>
      <visualSizeRange>0.3~0.4</visualSizeRange>
      <topWindExposure>0.3</topWindExposure>
      <wildClusterRadius>4</wildClusterRadius>
      <wildClusterWeight>8</wildClusterWeight>
      <wildOrder>1</wildOrder>
      <purpose>Beauty</purpose>
	  <pollution>PollutedOnly</pollution>
	  <fertilityMin>0.10</fertilityMin>
      <fertilitySensitivity>0</fertilitySensitivity>
    </plant>
  </ThingDef>

</Defs>
