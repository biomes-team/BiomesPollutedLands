	<ThingDef ParentName="BMT_PolluedLands_AnimalThingBase">
		<defName>BMT_GastroToad</defName>
		<label>gastro toad</label>
		<description>A funny looking toad bigger than some rabbits. It uses its sticky acidic tongue and wide maw to snag small prey. Some waster colonies tame and raise them for their meat.</description>
		<statBases>
			<MoveSpeed>3</MoveSpeed>
			<MarketValue>50</MarketValue>
			<ComfyTemperatureMin>-10</ComfyTemperatureMin>
			<ComfyTemperatureMax>50</ComfyTemperatureMax>
			<FilthRate>2</FilthRate>
			<ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">1</ToxicEnvironmentResistance>
		</statBases>
		<tools>
			<li>
				<label>left claw</label>
				<capacities>
					<li>Scratch</li>
				</capacities>
				<extraMeleeDamages>
					<li>
						<def>BMT_ToxicScratch</def>
						<amount>8</amount>
						<chance>1</chance>
					</li>
				</extraMeleeDamages>
				<power>2</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
			</li>
			<li>
				<label>right claw</label>
				<capacities>
					<li>Scratch</li>
				</capacities>
				<extraMeleeDamages>
					<li>
						<def>BMT_ToxicScratch</def>
						<amount>8</amount>
						<chance>1</chance>
					</li>
				</extraMeleeDamages>
				<power>2</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
			</li>
			<li>
				<capacities>
					<li>Bite</li>
				</capacities>
				<extraMeleeDamages>
					<li>
						<def>BMT_ToxicBite</def>
						<amount>8</amount>
						<chance>1</chance>
					</li>
				</extraMeleeDamages>
				<power>3</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<chanceFactor>0.7</chanceFactor>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<extraMeleeDamages>
					<li>
						<def>BMT_ToxicHeadbutt</def>
						<amount>8</amount>
						<chance>1</chance>
					</li>
				</extraMeleeDamages>
				<power>1</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>BMT_EggGastroToadFertilized</eggFertilizedDef>
				<eggFertilizationCountMax>6</eggFertilizationCountMax>
				<eggLayIntervalDays>5</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>5~6</eggCountRange>
			</li>
		</comps>
		<race>
			<body>QuadrupedAnimalWithPaws</body>
			<baseBodySize>0.3</baseBodySize>
			<baseHealthScale>0.35</baseHealthScale>
			<baseHungerRate>0.2</baseHungerRate>
			<foodType>OmnivoreRoughAnimal</foodType>
			<leatherDef>BMT_Leather_Amphibian</leatherDef>
			<useMeatFrom>BMT_Maxolotl</useMeatFrom>
			<wildness>20</wildness>
			<trainability>None</trainability>
			<mateMtbHours>8</mateMtbHours>
			<lifeExpectancy>10</lifeExpectancy>
			<lifeStageAges>
				<li>
					<def>AnimalBabyTiny</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.12</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.2</minAge>
					<soundWounded>Pawn_Iguana_Wounded</soundWounded>
					<soundDeath>Pawn_Iguana_Death</soundDeath>
					<soundCall>Pawn_Iguana_Call</soundCall>
					<soundAngry>Pawn_Iguana_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
		</race>
		<tradeTags>
			<li>BMT_PollutedAnimalCommon</li>
		</tradeTags>
		<modExtensions>
			<li MayRequire="pathfinding.framework" Class="PathfindingFramework.MovementExtension">
				<movementDef>PF_Movement_Amphibious</movementDef>
			</li>
		</modExtensions>
	</ThingDef>

