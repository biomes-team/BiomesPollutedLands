	<ThingDef ParentName="BMT_PollutedLands_AnimalThingBase">
		<defName>BMT_MutatingTumorfishSpawn</defName>
		<label>mutating tumorfish spawn</label>
		<description>The first stage of the tumorfish life cycle. It is quite weak.</description>
		<statBases>
			<MoveSpeed>3.5</MoveSpeed>
			<MarketValue>100</MarketValue>
			<ComfyTemperatureMin>-10</ComfyTemperatureMin>
			<ComfyTemperatureMax>60</ComfyTemperatureMax>
			<FilthRate>4</FilthRate>
			<ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">1.0</ToxicEnvironmentResistance>
			<Wildness>0.2</Wildness>
		</statBases>
		<race>
			<leatherDef>BMT_Fishskin</leatherDef>
			<baseBodySize>0.8</baseBodySize>
			<baseHealthScale>0.8</baseHealthScale>
			<baseHungerRate>0.25</baseHungerRate>
			<foodType>VegetarianRoughAnimal</foodType>
			<trainability>None</trainability>
			<lifeExpectancy>0.25</lifeExpectancy>
			<waterSeeker>true</waterSeeker>
			<waterCellCost>1</waterCellCost>
			<manhunterOnTameFailChance>0.10</manhunterOnTameFailChance>
			<manhunterOnDamageChance>0.30</manhunterOnDamageChance>
			<specificMeatDef>BMT_FishMeatCore</specificMeatDef>
			<body>BMT_FishBody</body>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
			<lifeStageAges>
				<li>
					<def>AnimalBabyTiny</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.05</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.2</minAge>
					<soundWounded>Pawn_Megascarab_Wounded</soundWounded>
					<soundDeath>Pawn_Megascarab_Death</soundDeath>
					<soundCall>Pawn_Megascarab_Call</soundCall>
					<soundAngry>Pawn_Megascarab_Angry</soundAngry>
				</li>
			</lifeStageAges>
		</race>	
		<!--uiIconScale>1.5</uiIconScale-->
		<comps>
			<li Class="BiomesCore.CompProperties_EvolveAtFixedAge">
				<ageInDays>12</ageInDays>
				<evolveIntoPawnKindDef>BMT_MutatingTumorfishFry</evolveIntoPawnKindDef>
			</li>
		</comps>
		<tools>
			<li>
				<label>teeth</label>
				<power>5</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<chanceFactor>1.0</chanceFactor>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>5</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>4</power>
				<cooldownTime>2</cooldownTime>
				<!-- <chanceFactor>0.2</chanceFactor> -->
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.1</chanceFactor>
			</li>
