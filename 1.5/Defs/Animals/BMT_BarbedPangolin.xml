  	<HediffDef>
		<defName>BMT_PangolinDefense</defName>
		<label>curled up</label>
		<description>Curled up for defense.</description>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0</postFactor>
