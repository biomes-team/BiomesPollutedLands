<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BMT_PollutedLands_AnimalThingBase">
		<defName>BMT_CarrionVulture</defName>
		<label>carrion vulture</label>
		<description>An eater of dead flesh, this bird will flock en masse to rotting corpses before bothering to hunt live prey.</description>
		<statBases>
			<MoveSpeed>3</MoveSpeed>
			<MarketValue>95</MarketValue>
			<ComfyTemperatureMin>-25</ComfyTemperatureMin>
			<ComfyTemperatureMax>70</ComfyTemperatureMax>
			<ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">1.0</ToxicEnvironmentResistance>
		</statBases>
		<race>
			<herdAnimal>true</herdAnimal>
			<predator>true</predator>
			<maxPreyBodySize>0.20</maxPreyBodySize>
			<baseBodySize>0.32</baseBodySize>
			<baseHealthScale>0.5</baseHealthScale>
			<baseHungerRate>0.5</baseHungerRate>
			<foodType>CarnivoreAnimal</foodType>
			<leatherDef>Leather_Bird</leatherDef>
			<wildness>0.75</wildness>
			<trainability>Intermediate</trainability>
			<lifeExpectancy>10</lifeExpectancy>
			<body>Bird</body>
			<manhunterOnTameFailChance>0.02</manhunterOnTameFailChance>
			<manhunterOnDamageChance>0.20</manhunterOnDamageChance>
			<lifeStageAges>
				<li>
					<def>AnimalBabyTiny</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.12</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.2</minAge>
					<!-- To-Do: Added sounds -->
					<!-- <soundWounded>Pawn_Iguana_Wounded</soundWounded> -->
					<!-- <soundDeath>Pawn_Iguana_Death</soundDeath> -->
					<!-- <soundCall>Pawn_Iguana_Call</soundCall> -->
					<!-- <soundAngry>Pawn_Iguana_Angry</soundAngry> -->
				</li>
			</lifeStageAges>
		</race>
		<modExtensions>
			<li MayRequire="pathfinding.framework"  Class="PathfindingFramework.MovementExtension">
				<movementDef>PF_Movement_Flying</movementDef>
			</li>
			<li MayRequire="pathfinding.framework"  Class="PathfindingFramework.LocomotionMovementExtension">
				<locomotionUrgencies>
					<li>Jog</li>
					<li>Sprint</li>
				</locomotionUrgencies>
				<moveSpeedMultiplier>4</moveSpeedMultiplier>
			</li>
		</modExtensions>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>BMT_EggCarrionVultureFertilized</eggFertilizedDef>
				<eggFertilizationCountMax>2</eggFertilizationCountMax>
				<eggLayIntervalDays>9</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>5~6</eggCountRange>
			</li>
			<li Class="BiomesCore.CompProperties_PackHunter">
				<joinHuntRange>24</joinHuntRange>
				<packConfidenceBonusPerMember>0.25</packConfidenceBonusPerMember>
			</li>
		</comps>
		<tools>
			<li>
				<label>claws</label>
				<capacities>
					<li>Scratch</li>
				</capacities>
				<power>6</power>
				<cooldownTime>3</cooldownTime>
				<chanceFactor>0.2</chanceFactor>
				<linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>14</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>beak</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>9</power>
				<cooldownTime>1.5</cooldownTime>
				<linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>14</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>4</power>
				<cooldownTime>1.8</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
		<tradeTags>
			<li>AnimalUncommon</li>
			<li>BMT_PollutedAnimalUncommon</li>
		</tradeTags>
	</ThingDef>

